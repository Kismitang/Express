
.container.data-v-2f1ef635 {
  background-color: #f7f7f7;
  height: 100vh;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 头部样式 */
.header.data-v-2f1ef635 {
  background-color: #fff;
  padding: 20px;
  display: flex;
  align-items: center;
}
.avatar-container.data-v-2f1ef635 {
  margin-right: 15px;
}
.avatar.data-v-2f1ef635 {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background-color: #ffde00;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36px;
  font-weight: bold;
  color: #333;
}
.user-info.data-v-2f1ef635 {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.username.data-v-2f1ef635 {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}
.user-balance.data-v-2f1ef635 {
  font-size: 14px;
  color: #999;
  margin-top: 5px;
}
/* 实名状态样式 */
.authenticated.data-v-2f1ef635 {
  font-size: 14px;
  color: #4caf50; /* 绿色 */
  margin-top: 5px;
}
.not-authenticated.data-v-2f1ef635 {
  font-size: 14px;
  color: #ff5252; /* 红色 */
  margin-top: 5px;
}

/* 数据指标 */
.metrics.data-v-2f1ef635 {
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  padding: 15px 0;
  margin-bottom: 10px;
}
.metric-item.data-v-2f1ef635 {
  text-align: center;
}
.metric-value.data-v-2f1ef635 {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}
.metric-label.data-v-2f1ef635 {
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}

/* 列表项 */
.list-section.data-v-2f1ef635 {
  background-color: #fff;
  margin-bottom: 10px;
}
.list-item.data-v-2f1ef635 {
  display: flex;
  align-items: center;
  padding: 15px 20px;
  border-bottom: 1px solid #f0f0f0;
}
.item-content.data-v-2f1ef635 {
  flex: 1;
  display: flex;
  align-items: center;
}
.item-title.data-v-2f1ef635 {
  margin-left: 10px;
  font-size: 16px;
  color: #333;
}
.audio-tip.data-v-2f1ef635 {
  margin-right: 10px;
  background-color: #ffecad;
  border-radius: 4px;
  padding: 4px 8px;
  font-size: 12px;
}
.tip-text.data-v-2f1ef635 {
  color: #ff9900;
}

/* 头像编辑对话框 */
.avatar-dialog.data-v-2f1ef635 {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
.dialog-content.data-v-2f1ef635 {
  background-color: #fff;
  width: 80%;
  border-radius: 10px;
  overflow: hidden;
}
.preview-container.data-v-2f1ef635 {
  padding: 20px;
  text-align: center;
}
.preview-avatar.data-v-2f1ef635 {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  margin: 0 auto;
}
.button-group.data-v-2f1ef635 {
  display: flex;
  justify-content: space-around;
  padding: 15px;
  border-top: 1px solid #eee;
}
.cancel-btn.data-v-2f1ef635, .confirm-btn.data-v-2f1ef635 {
  width: 40%;
  height: 40px;
  border: none;
  border-radius: 20px;
  background-color: #f0f0f0;
  color: #333;
  font-size: 16px;
}
.confirm-btn.data-v-2f1ef635 {
  background-color: #4caf50;
  color: #fff;
}
